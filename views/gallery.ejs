<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gallery</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Gallery</h1>
      <div class="text-center mb-4">
        <!-- Add "Upload Another Image" button -->
        <a href="/" class="btn btn-primary">Upload Another Image</a>
      </div>
      <div class="row">
        <% if (images.length > 0) { %> <% images.forEach((image) => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img
              src="<%= image.url %>"
              class="card-img-top img-thumbnail"
              alt="<%= image.name %>"
            />
            <div class="card-body">
              <h5 class="card-title text-center"><%= image.name %></h5>
              <div class="text-center">
                <button
                  class="btn btn-danger delete-btn"
                  data-public-id="<%= image.public_id %>"
                >
                  Delete
                </button>
              </div>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <p class="text-center">No images found in the gallery.</p>
        <% } %>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const deleteButtons = document.querySelectorAll(".delete-btn");

        deleteButtons.forEach((button) => {
          button.addEventListener("click", async () => {
            const publicId = button.getAttribute("data-public-id");
            const card = button.closest(".col-md-4");

            if (confirm("Are you sure you want to delete this image?")) {
              try {
                const response = await fetch("/delete", {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify({ public_id: publicId }),
                });

                if (response.ok) {
                  alert("Image deleted successfully.");
                  card.remove();
                } else {
                  alert("Failed to delete the image.");
                }
              } catch (error) {
                console.error("Error:", error);
                alert("An error occurred while deleting the image.");
              }
            }
          });
        });
      });
    </script>
  </body>
</html>
